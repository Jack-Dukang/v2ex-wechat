/* pages/node/detail.wxss */

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.node {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 10px;
}

.node-left {
  display: flex;
  flex-direction: column;
  margin-left: 30px;
  margin-top: 20px;
}

.node-left text {
  padding: 2px;
}

.node-right {
  margin-right: 50px;
}

.node-avatar {
  height: 80px;
  width: 80px;
  border-radius: 80%;
}

.node-header {
  display: inline-flex;
  border-bottom: 1px solid #eee;
}

.node-header text {
  margin-left: 30px;
  width: 220px;
  margin-bottom: 5px;
}


/*1*/
.topic-item {
    padding:10rpx;
    border-bottom: 1px solid #eee;
}

.topic-item {
  display: flex;
  flex-direction: row;
}

.member-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
  border-radius: 90%;
}
.topic-header{
  align-items: left;
  margin-top: 15px;
  margin-bottom: 15px;
  border-bottom:1px solid #777;  
}

.topic-info {
    flex:1;
    font-size: 24rpx;
}

.topic-inner {
    display: flex;
    align-items: center;
    color:#777;
}

.topic-title {
    height:120rpx;
    line-height: 1.4;
    box-sizing: border-box;
    padding-top: 5rpx;
    overflow:hidden;
}

.topic-left {
    flex:1;
}

.node-name {
    display: inline-block;
    margin-right: 20rpx;
    padding:5rpx 10rpx;
    border-radius: 5rpx;
    background-color: #eee;
}