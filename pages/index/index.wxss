/**index.wxss**/
.container{
  display: flex;
  flex-direction: column
}
.topic-item {
    padding:10rpx;
    border-bottom: 1px solid #eee;
}

.topic-item {
  display: flex;
  flex-direction: row;
}

.member-avatar {
  width: 128rpx;
  height: 128rpx;
  margin-right: 20rpx;
  border-radius: 90%;
}
.topic-header{
  align-items: left;
  margin-top: 15px;
  margin-bottom: 15px;
  border-bottom:1px solid #777;  
}

.topic-info {
    flex:1;
    font-size: 24rpx;
}

.topic-inner {
    display: flex;
    align-items: center;
    color:#777;
}

.topic-title {
    height:120rpx;
    line-height: 1.4;
    box-sizing: border-box;
    padding-top: 5rpx;
    overflow:hidden;
}

.topic-left {
    flex:1;
}

.node-name {
    display: inline-block;
    margin-right: 20rpx;
    padding:5rpx 10rpx;
    border-radius: 5rpx;
    background-color: #eee;
}