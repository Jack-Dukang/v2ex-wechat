/* pages/post/post.wxss */
.container{
  display: flex;
  flex-direction: column;
}

.view-post{
  display: flex;
  flex-direction: column;
  padding: 10px;
}

.view-post-title{
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
}

.user-avatar{
  width: 50px;
  height: 50px;
  border-radius: 80%;
}
.topic-title{
  margin-left: 20px;
}

.view-userinfo{
  display: flex;
  flex-direction: row;
  margin-bottom: 10px;
  width: 100%;
}

.view-userinfo-node{
  background-color: #eee;
  font-size: 12px;
  text-align: center;
}

.view-userinfo-author{
  font-size: 14px;
  color: #999;
  margin-left: 8px;
}

.view-userinfo-time{
  font-size: 14px;
  color: #999;
  margin-left: 8px;
}
